  <!-- Hero Section  -->
  <section id="hero">
    <div class="hero container-home">
      <div>
        <h1>Best <span></span></h1>
        <h1>Buddies <span></span></h1>
        <% if user_signed_in? %>
          <% if current_user.partner.nil? %>
            <%= link_to "Help a homeless buddy", new_animal_path, class:"cta" %>
          <% else %>
            <%= link_to "Rescue a buddy", animals_path, class:"cta" %>
          <% end %>
        <% else %>
            <%= link_to "Help a homeless buddy", new_animal_path, class:"cta" %>
        <% end %>
      </div>
    </div>
  </section>
  <!-- End Hero Section  -->

  <!-- Service Section -->
  <section id="services">
    <div class="services container-home">
      <div class="service-top">
        <h1 class="section-title">Adopt a <span>B</span>uddy</h1>
        <p>Join us helping a pet find decent home to live. Adopting is an act of love, it's choosing to change the fate of an animal that would have a difficult life, it's opening your heart to those who most need your care.
Adopting is living a beautiful experience of love and gratitude.
</p>
      </div>
      <div class="service-bottom">
      <% @animals.last(6).each do |animal| %>
        <div class="flex-sm-3">

        <div class="container-grid">

          <div class="card__new">

            <div class="card__header">

              <%= cl_image_tag animal.photos.first.key, class: "card__image"%>

              <div class="card-details">

                <h2 class ="card-title"> <%= animal.name.capitalize %> </h2>

                <div class="card-metas">

                  <div class="meta">
                    <% if animal.category == 'Dog' %>
                      <i class="fas fa-dog"></i>
                    <% else %>
                      <i class="fas fa-cat"></i>
                    <% end %>
                  </div>

                  <div class="meta">
                    <% if animal.gender == 'Male' %>
                      <i class="fas fa-mars"></i>
                    <% else %>
                      <i class="fas fa-venus"></i>
                    <% end %>
                  </div>


                </div> <!--card-metas ends-->

              </div> <!--card-details ends-->

            </div> <!--card__header ends-->

          <div class="card__body">

            <div class="card__category"><%= animal.breed.capitalize %></div>

            <div class="card__description">
              <p><%= animal.size %></p>
            </div>

            <%= link_to 'Meet me', animal_path(animal), class: "button-card"%>

          </div> <!--card__body ends-->

          </div> <!--card ends-->

        </div> <!--container-grid ends-->

      </div> <!--flex sm1 ends-->

      <% end %>
      </div>
    </div>
  </section>
  <!-- End Service Section -->

  <!-- Projects Section -->
  <section id="projects">
    <div class="projects container-home">
      <div class="projects-header">
        <h1 class="section-title">Recent <span>Adoptions</span></h1>
      </div>
      <div class="all-projects">
        <% @adoptions.last(2).each do |adoption| %>
          <div class="project-item">
            <div class="project-info">
              <h1><%= adoption.animal.name.capitalize %></h1>
              <h2><%= adoption.animal.breed %></h2>
              <p> <%= adoption.animal.description %></p>
            </div>
            <div class="project-img">
              <%= cl_image_tag adoption.animal.photos.first.key%>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </section>
  <!-- End Projects Section -->

  <!-- About Section -->
  <section id="about">
    <div class="about container-home">
      <div class="col-left">
        <div class="about-img">
          <%= image_tag("about.jpg")%>
        </div>
      </div>
      <div class="col-right">
        <h1 class="section-title">Our <span>mission</span></h1>
        <p>Make your life better<br> Help pets find a decent home<br>Increase the overall effectiveness of pet adoption programs<br>Raise the status of pets to family member</p>
        <%= link_to "See our partners", partners_path, class: "cta" %>
      </div>
    </div>
  </section>
  <!-- End About Section -->

