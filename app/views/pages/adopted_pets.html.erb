<h1 class="section-title padding-default">My <span>A</span>pplications</h1>

  <h1 class="m-5 padding-default"><%="Hello, #{current_user.name}. " %></h1>
  <h3 class="m-5"><i class="fas fa-paw"></i> These the animals you want to adopt.</h3>
  <div class = "container-home ">
    <div class ="row justify-content-center">
      <% @user_adoption.each do |adoption| %>
  
      <div class="flex-sm-3">

        <div class="container-grid">

          <div class="card__new">

            <div class="card__header">

              <%= cl_image_tag adoption.animal.photos.first.key, class: "card__image"%>

              <div class="card-details">

                <h2 class ="card-title"> <%= adoption.animal.name.capitalize %> </h2>

                <div class="card-metas">

                  <div class="meta">
                    <% if adoption.animal.category == 'Dog' %>
                      <i class="fas fa-dog"></i>
                    <% else %>
                      <i class="fas fa-cat"></i>
                    <% end %>
                  </div>

                  <div class="meta">
                    <% if adoption.animal.gender == 'Male' %>
                      <i class="fas fa-mars"></i>
                    <% else %>
                      <i class="fas fa-venus"></i>
                    <% end %>
                  </div>


                </div> <!--card-metas ends-->

              </div> <!--card-details ends-->

            </div> <!--card__header ends-->

          <div class="card__body">

            <div class="card__category"><%= adoption.animal.breed.capitalize %></div>

            <div class="card__description">
              <p><%= adoption.animal.size %></p>
            </div>

            <%= link_to 'More', animal_path(adoption.animal), class: "button-card"%>

          </div> <!--card__body ends-->

          </div> <!--card ends-->

        </div> <!--container-grid ends-->

      </div> <!--flex sm1 ends-->

<% end %>

    </div> <!--row -->
  </div>

