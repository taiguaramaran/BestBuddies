<div class="table-container mx-5">
  <div class="row justify-content-center align-items-center">
    <div class="col-10 mx-5">
      <h1 class="my-4"><%="Hello, #{current_user.name}. " %></h1>
      <h3 class="my-4"><i class="fas fa-paw"></i> These are all the buddies you've helped.</h3>

      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Size</th>
          </tr>
        </thead>

        <% @animals.each do |animal| %>
          <tbody>
            <tr>
              <td><%= link_to "#{animal.name}", animal_path(animal) %></td>
              <td><%= animal.gender %></td>
              <td><%= animal.size %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <%= link_to 'Go back', root_path, class:'btn btn-orange mt-3' %>
    </div>
  </div>
</div>
