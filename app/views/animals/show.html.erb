<div class="container">
  <div class="row bg-white justify-content-around my-5 p-5">
    <div class="col">
      <%= cl_image_tag (@animal.photos.first.key), width: 400%>
    </div>
    <div class="col">

      <h1 class="mb-3"> My name is <%= @animal.name %>! </h1>
      <h3>Facts about me:</h3>
      <p class="pb-20 my-3"><strong>Breed</strong> "<%= @animal.breed %>"</p>
      <p class="pb-20 my-3"><strong>Category</strong> "<%= @animal.category %>"</p>
      <p class="pb-20 my-3"><strong>Size</strong> "<%= @animal.size %>"</p>
      <p class="pb-20 my-3"><strong>Gender</strong> "<%= @animal.gender %>"</p>
      <p class="pb-20 my-3"><strong>Age</strong> "<%= @animal.age %>"</p>
      <%= link_to 'Edit', edit_animal_path(@animal), class:"btn btn-flat"%>
      <%= link_to 'Back', my_animals_path(@animal), class:"btn btn-primary"%>


      <%# <% if policy(@animal).rescue? %>
