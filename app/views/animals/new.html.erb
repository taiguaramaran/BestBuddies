<h1> NEW FORM </h1>

<%= simple_form_for [ @animal ] do |f| %>
    <%= f.input :name %>
    <%= f.input :breed %>
    <%= f.input :category, collection: [:CAT, :DOG] %>
    <%= f.input :size %>
    <%= f.input :gender %>
    <%= f.input :age, collection: ["Até seis meses", "Até 2 anos", "Até 5 anos", "Mais que 5 anos"]%>    
    <%= f.input :photo, as: :file %>
    <%= f.submit "Cadastrar", class: "btn btn-primary" %>
<% end %>
          