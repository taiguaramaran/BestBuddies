<div class="container bg-white my-5">
  <div class="row">
    <div class="col">

      <h1>Best Buddies Partner</h1>

      <h2><%= @partner.name %></h2>
      <h4><%= @partner.address %></h4>
      <h4><%= @partner.email %></h4>
      <h4><%= @partner.phone %></h4>

      <% if current_user.partner == @partner %>
        <%= link_to "Edit", edit_partner_path(@partner), class:'btn btn-green' %>
        <%= link_to "Back", partners_path, class:'btn btn-orange' %>
      <% else %>
        <%= link_to "Back", partners_path, class:'btn btn-orange' %>
      <% end %>

    </div>
  </div>
</div>
